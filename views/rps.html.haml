!!!
%html
	%head
		%title Practica - Piedra, Papel o Tijera
		%meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
		%link{:href => "/public/css/bootstrap.css", :rel => "stylesheet"}
		%link{:href => "/public/css/bootstrap-responsive.css", :rel => "stylesheet"}
		%link{:href => "/public/css/estilo-propio.css", :rel => "stylesheet"}
		%script{:src => "/public/js/bootstrap.js"}
	%body
		.navbar.navbar-inverse.navbar-fixed-top
			.navbar-inner
				.container
					%a.brand{href: "https://github.com/AdrianHG89/Practica4_RPS_Haml-CSS"} Practica 6 - Juego Piedra, Papel o Tijera - STW-ETSII
		.container
			.hero-unit
				%h1 Juega a Piedra, Papel o Tijera
				%p Elije una de las jugadas.
				%center
					- throws.each do |tirada|
						%a.btn.btn-large.btn-primary.active{href: "?jugada=#{tirada}"}= tirada
				%br
				%center
					- resultados.each do |resul|
						- if resul == 'Ganadas'
							%button.btn.btn-success.btn-circle.btn-xl{type: "button"}
								%p= resul
								%p= ganadas
						- if resul == 'Empatadas'
							%button.btn.btn-warning.btn-circle.btn-xl{type: "button"}
								%p= resul
								%p= empatadas
						- if resul == 'Perdidas' then
							%button.btn.btn-danger.btn-circle.btn-xl{type: "button"}
								%p= resul
								%p= perdidas
					%button.btn.btn-default.btn-circle.btn-xl{type: "button"}
						%p Jugagas
						%p= jugadas
			.row
				.span4
					%center
						%h2 Jugador
					- if(player_throw == 'Piedra')
						%center
							%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/rock_zps0ebe7421.jpg', :alt => 'Rock', height: '250', width: '250'}
					- elsif (player_throw == 'Tijeras')
						%center
							%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/tijeras_zps543ca9ac.jpg', :alt => 'Scissors', height: '250', width: '250'}
					- elsif (player_throw == 'Papel')
						%center
							%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/paper_zpse0ed0ca5.jpg', :alt => 'Paper', height: '250', width: '250'}
				.span4
					%center
						%h2 Vs.
						%h3= anwser
				.span4
					%center
						%h2 Maquina
					- if(throws.include?(player_throw))	
						- if(computer_throw == 'Piedra')
							%center
								%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/rock_zps0ebe7421.jpg', :alt => 'Rock', height: '250', width: '250'}
						- elsif (computer_throw == 'Tijeras')
							%center
								%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/tijeras_zps543ca9ac.jpg', :alt => 'Scissors', height: '250', width: '250'}
						- elsif (computer_throw == 'Papel')
							%center
								%img.img-circle{:src => 'http://i1296.photobucket.com/albums/ag1/adrihg89/paper_zpse0ed0ca5.jpg', :alt => 'Paper', height: '250', width: '250'}
